<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <% if user.image? %>
　　        <%= image_tag user.image.thumb.url, { size: 50 } %>
　        <% else %>
　　      <!--%= image_tag 'noimage.gif' %-->
            <img class="media-object img-circle" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <% end %>
        </div>
        <div class="media-body">
          <div>
            <%= link_to user.nickname, user_path(user) %>
          </div>
          <div>
            <p>
              <%= user.grade.year %>/
              <%= user.department.name %>/
              <%= user.subject.name %>
            </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>